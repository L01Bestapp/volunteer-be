 ========================================
# VOLUNTEER MANAGEMENT SYSTEM
# Environment Variables Template
# ========================================

# Copy this file to .env and fill in your values
# cp .env.example .env

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL Connection
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/volunteer_db
SPRING_DATASOURCE_USERNAME=volunteer
SPRING_DATASOURCE_PASSWORD=volunteer

# JPA/Hibernate Settings
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# ========================================
# JWT CONFIGURATION
# ========================================

# JWT uses PEM files from src/main/resources/certs/
# No need for JWT_PRIVATE_KEY and JWT_PUBLIC_KEY env vars

# Token expiration times (in seconds)
EXP_TOKEN=604800           # 7 days
EXP_REFRESH_TOKEN=2592000  # 30 days
JWT_KEY_ID=ctxh-key

# ========================================
# MAIL CONFIGURATION (Gmail)
# ========================================

# Gmail App Password: https://myaccount.google.com/apppasswords
MAIL_SENDER_USERNAME=your-email@gmail.com
MAIL_SENDER_PASSWORD=your-16-char-app-password

# ========================================
# CLOUDINARY CONFIGURATION
# ========================================

# Cloudinary Dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ========================================
# GOOGLE OAUTH 2.0 CONFIGURATION
# ========================================

# Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
OAUTH2_REDIRECT_URI=http://localhost:3000/oauth2/callback

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Base URL (change for production)
BASE_URL_WEBSITE=http://localhost:8080

# Active Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Server Port
SERVER_PORT=8080
